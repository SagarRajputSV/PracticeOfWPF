<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="TxtBinder" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,30,0,0" Height="20" Width="150"></TextBox>
        <TextBlock Name="TBinder" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,80,0,0">
            <TextBlock.Text>
                <Binding ElementName="TxtBinder" Path="Text"></Binding>
            </TextBlock.Text>
        </TextBlock>
        
    </Grid>
</Window>
