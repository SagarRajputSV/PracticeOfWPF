<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <ComboBox Name="CmbMenu" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" Height="30" Width="200" SelectionChanged="CmbMenu_SelectionChanged">
            <ComboBoxItem Content="Select From the Menu"></ComboBoxItem>
            <ComboBoxItem Content="Coffee"></ComboBoxItem>
            <ComboBoxItem Content="Tea"></ComboBoxItem>
            <ComboBoxItem Content="Juice"></ComboBoxItem>
            <ComboBoxItem Content="Black Coffee"></ComboBoxItem>
            <ComboBoxItem Content="Iced Tea"></ComboBoxItem>
        </ComboBox>
        <Button Name="BtnSelect" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="250,20,0,0" Width="50" Height="30" Content="Select" Click="BtnSelect_Click"></Button>
    </Grid>
</Window>
